<div class="row">
  <div class="col-md-2">
    <selection class="chef_info center">
      <%= gravatar_for(comment.chef, size: 80) %>
    </selection>
  </div>
  <div class="col-md-8 well">
    <p><%= comment.description %></p>
    <p>
      <span class="quiet"><small><%= time_ago_in_words(comment.created_at) %> ago by
                                                <%= comment.chef.chefname %></small></span>
    </p>
  </div>
</div>